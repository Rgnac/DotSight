<Window x:Class="Crosshair.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DotSight Settings" Height="340" Width="300">
    <StackPanel Margin="10" VerticalAlignment="Top">

        <CheckBox x:Name="CrosshairToggle" Content="Enable Crosshair" IsChecked="True" Margin="0,0,0,10"/>
        <Button x:Name="CrosshairsButton" Content="Crosshairs" Margin="0,10,0,10" Click="CrosshairsButton_Click"/>
        <WrapPanel x:Name="CrosshairsPanel" Visibility="Collapsed" Margin="0,0,0,10"/>
        <TextBlock Text="Game Window Name" />
        <ComboBox x:Name="GameComboBox" Margin="0,0,0,10">
            <ComboBoxItem Content="Center on screen" IsSelected="True"/>
            <ComboBoxItem Content="Notatnik"/>
            <ComboBoxItem Content="Rust"/>
        </ComboBox>

        <TextBlock Text="Crosshair Color" Margin="0,10,0,0"/>
        <ComboBox x:Name="ColorComboBox" SelectionChanged="ColorComboBox_SelectionChanged" Margin="0,0,0,10" >
            <ComboBoxItem Content="Red" IsSelected="True"/>
            <ComboBoxItem Content="Green"/>
            <ComboBoxItem Content="Blue"/>
            <ComboBoxItem Content="Yellow"/>
            <ComboBoxItem Content="White"/>
            <ComboBoxItem Content="Cyan"/>
            <ComboBoxItem Content="Magenta"/>
        </ComboBox>

        <TextBlock Text="Crosshair Thicness" />
        <Slider x:Name="ThicknessSlider" Minimum="1" Maximum="10" ValueChanged="ThicknessSlider_ValueChanged"/>

        <TextBlock Text="Crosshair Size" />
        <Slider x:Name="SizeSlider" Minimum="1" Maximum="100" ValueChanged="SizeSlider_ValueChanged"/>
    </StackPanel>
</Window>
